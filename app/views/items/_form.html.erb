<%= simple_form_for @item do |f| %>
  <% f.error_notification %>
  <% f.full_error :thumb_file_size, class: "alert label" %>
  <% f.full_error :thumb_content_type, class: "alert label" %>
    <%= f.input :title %>
    <%= f.input :price %>
    <%= f.input :thumb, label: "Upload your main image (Used for search results page)" %>
    <%= f.input :content, placeholder: "Compose new item..." %>
  <%= f.submit "Post", class: "button" %> 
<% end %>
